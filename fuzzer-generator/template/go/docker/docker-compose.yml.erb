version: '3'
services:
  fuzzer:
    image: everestmz/maxfuzz:latest
    command: /root/fuzzer-files/<%= @fuzzer_name %>/start
    volumes:
      - ${SYNC_DIR}:/root/sync
      - ../:/root/fuzzer-files/<%= @fuzzer_name %>
    environment:
      - MAXFUZZ_ENABLE_S3=0
      - NO_REPRODUCTION=1
      - GIT_SHA=${GIT_SHA}
    ports:
      - "8080:8080"